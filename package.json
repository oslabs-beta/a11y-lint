{
  "name": "A11yLint",
  "displayName": "a11ylint",
  "description": "Accessibility linter for VS Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.98.0"
  },
  "main": "./dist/extension.js",
  "activationEvents": [
    "onLanguage:css",
    "onLanguage:html",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact"
  ],
  "contributes": {
    "languages": [
      {
        "id": "css",
        "extensions": [
          ".css"
        ],
        "aliases": [
          "CSS"
        ]
      },
      {
        "id": "html",
        "extensions": [
          ".html"
        ],
        "aliases": [
          "HTML"
        ]
      },
      {
        "id": "javascriptreact",
        "extensions": [
          ".jsx"
        ],
        "aliases": [
          "JavaScript React"
        ]
      },
      {
        "id": "typescriptreact",
        "extensions": [
          ".tsx"
        ],
        "aliases": [
          "TypeScript React"
        ]
      }
    ]
  },
  "scripts": {
    "compile": "node esbuild.js",
    "watch": "node esbuild.js --watch",
    "package": "node esbuild.js --production"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3",
    "eslint": "^9.21.0"
  }
}
